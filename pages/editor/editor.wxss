/* pages/editor/editor.wxss */
.editor_box{position: relative;}
.header{width: 100%;position: relative;background:rgb(128, 161, 189);z-index: 2}
.header_text{display: block; width: 100%;line-height: 44px;text-align: center; color: #fff}
.modelBack{position: fixed;top:0;left:0;width: 100%;height: 100%;}
.editor_text{width: 100%; max-height: 400px;border: 1px solid #ddd;margin-top: 10px}
.back{
  position: absolute;
  top: 10px;
  left: 15px;
  width: 24px;
  height: 24px;
}
page{
  width: 100%;
  height: 100%;
}
.container{
  flex-flow:column nowrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 90%;
  display: flex;
}
.section{
  width: 90%;
  height: 36px;
  margin: 10px auto;
}
.picker{
  border: 2px dashed #c4c3c3;
  box-sizing: border-box;
  text-align: center;
  padding: 10px;
  border-radius:3px; 
}
.title{
  width: 90%;
  height: 36px;
  margin: 10px auto;
  font-size: 35rpx;
  display: flex;
  flex-flow:row nowrap;
  text-align: center;
}
.title-inp{
  width: 100%;
}
.row{
  flex: 1;
  display: flex;
  width: 90%;
  height:100%;
  margin: 0 5%;
  overflow: hidden;
  border:2px dashed #c4c3c3;
}
.row .text{
  flex: 1;
  width: 100%;
  height: 100%;
  margin: 10px 10px;
  font-size: 16px;
  line-height: 26px;
  color: #000;    
}
.date{
  padding: 5rpx 0;
}
.model_btn{width: 80%;display: block;margin: 10px auto; background: rgb(128, 161, 189); line-height: 44px; color: #fff;}


